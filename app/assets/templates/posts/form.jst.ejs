<% if (post.id) { %>
  <h2>Edit your post!</h2>
<% } else { %>
  <h2>Create a brand new post!</h2>
<% } %>

<form class="post-form" data-id="<%= post.id %>">
  <label for="post_title">Title</label>
  <input type="text" name="post[title]" id="post_title" value="<%= post.escape('title') %>"></input>

  <br>

  <label for="post_body">Body</label>
  <textarea name="post[body]" id="post_body"><%= post.escape('body') %></textarea>

  <br>

  <% if (post.id) { %>
    <input type="submit" value="Update post">
  <% } else { %>
    <input type="submit" value="Create post">
  <% } %>
</form>